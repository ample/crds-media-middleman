<div class="card card--layered">
  <a href="<%= post.path %>">
    <div class="card-bgImage sixteen-nine" style="background-image: url('<%= post.try(:featured_image).try(:url) %>');"></div>
    <div class="card-block">
      <h5 class="card-meta metadata push-quarter-ends">
        <a href="<%= category_path(post.category) %>"><%= post.category.name %></a>
        &nbsp;-&nbsp;
        <%= post.read_time %>
      </h5>
      <a href="<%= post.path %>">
        <h4 class="card-title font-family-condensed-extra text-uppercase"><%= post.name %></h4>
      </a>
      <p class="card-text">
        <a href="<%= post.author.path %>"><%= post.author.name %></a> |
        <span class="card-date">
          <%= post.published_date.strftime('%b %-d, %Y') %>
        </span>
      </p>
    </div>
  </a>
</div>
